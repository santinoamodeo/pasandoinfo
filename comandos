sudo tee /etc/nginx/snippets/growatt.conf >/dev/null <<'NGX'
location /growatt/ {
    alias /var/www/growatt/;
    autoindex off;
    add_header Cache-Control "no-store";
}
NGX


# Inserta la lÃ­nea 'include ...' dentro del bloque server { ... } del default
sudo sed -i '/server {/a \    include /etc/nginx/snippets/growatt.conf;' /etc/nginx/sites-available/default

# Valida y recarga
sudo nginx -t && sudo systemctl reload nginx
